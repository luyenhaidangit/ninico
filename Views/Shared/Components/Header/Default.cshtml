@model Ninico.Models.Components.Header.HeaderViewModel

@{
    string formattedPhoneNumber = FormatHelper.FormatPhoneNumber(Model.Phone);
}

<header>
    <div class="logo-area mt-30 d-none d-xl-block">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-xl-2 col-lg-3">
                    <div class="logo">
                        <a href="@Url.Action("Index", "Home")"><img src="@Url.Content(Model.Logo)" alt="logo"></a>
                    </div>
                </div>
                <div class="col-xl-10 col-lg-9">
                    <div class="header-meta-info d-flex align-items-center justify-content-between">
                        <div class="header-search-bar">
                            <form action="@Url.Action("Index", "Search")" method="get">
                                <div class="search-info p-relative">
                                    <button class="header-search-icon"><i class="fal fa-search"></i></button>
                                    <input type="text" placeholder="Tìm kiếm sản phẩm...">
                                </div>
                            </form>
                        </div>
                        <div class="header-meta header-language d-flex align-items-center">
                            <div class="header-meta__social d-flex align-items-center ml-25">
                                <button class="header-cart p-relative tp-cart-toggle">
                                    <i class="fal fa-shopping-cart"></i>
                                    <span class="tp-product-count">2</span>
                                </button>
                                <a href="sign-in.html"><i class="fal fa-user"></i></a>
                                <a href="wishlist.html"><i class="fal fa-heart"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="main-menu-area mt-20 d-none d-xl-block">
        <div class="for-megamenu p-relative">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-xl-3 col-lg-3">
                        <div class="cat-menu__category p-relative">
                            <a class="tp-cat-toggle" href="#" role="button"><i class="fal fa-bars"></i>Loại sản phẩm</a>
                            <div class="category-menu category-menu-off">
                                <ul class="cat-menu__list">
                                    @foreach (var item in Model.ProductCategories)
                                    {
                                        <li class="@(item.Childrens.Count > 0 ? "menu-item-has-children" : "")">
                                            <a href="shop.html"><i class="@item.Icon"></i> @item.Name</a>

                                            @if (item.Childrens.Count > 0)
                                            {
                                                <ul class="submenu">
                                                    @foreach (var child in item.Childrens)
                                                    {
                                                        <li><a href="shop-2.html">@child.Name</a></li>
                                                    }
                                                </ul>
                                            }
                                            
                                        </li>
                                    }
                                </ul>
                                <div class="daily-offer">
                                    <ul>
                                        <li><a href="shop.html">Bán chạy</a></li>
                                        <li><a href="shop.html">Giảm giá sốc</a></li>
                                        <li><a href="shop.html">Mới</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-6 col-lg-6">
                        <div class="main-menu">
                            <nav id="mobile-menu">
                                <ul>
                                    <li><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                                    <li><a href="@Url.Action("Index", "Home")">Bài viết</a></li>
                                    <li><a href="@Url.Action("Index", "Home")">Liên hệ</a></li>
                                    <li><a href="@Url.Action("Index", "Home")">Về chúng tôi</a></li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                    <div class="col-xl-3 col-lg-3">
                        <div class="menu-contact">
                            <ul>
                                <li>
                                    <div class="menu-contact__item">
                                        <div class="menu-contact__icon">
                                            <i class="fal fa-phone"></i>
                                        </div>
                                        <div class="menu-contact__info">
                                            <a href="tel:@Model.Phone">@formattedPhoneNumber</a>
                                        </div>
                                    </div>
                                </li>
                                <li>
                                    <div class="menu-contact__item">
                                        <div class="menu-contact__icon">
                                            <i class="fal fa-map-marker-alt"></i>
                                        </div>
                                        <div class="menu-contact__info">
                                            <a href="shop-location.html">Vị trí</a>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

